<Window x:Class="HospitalApplication.Windows.Patient1.WindowExaminationEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalApplication.Windows.Patient1"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="WindowExaminationEdit" Height="150" Width="350"
        Style="{StaticResource WindowStyle}">
    
    <Grid Margin="10">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Content="New doctor:" Grid.Column="0"/>
                <ComboBox Name="Combo" Grid.Column="1"/>
            </Grid>
            <Button Content="Confirm" x:Name="ButtonOk" Click="ButtonOk_Click" Width="100" Margin="0 30 0 0"/>
            <Label Content="" Name="oldDoctor"></Label>
            <Label Content="" Name="newDoctor"></Label>
        </StackPanel>
    </Grid>
</Window>
